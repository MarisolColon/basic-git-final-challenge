{
    "webdriver": {
        "server_path": "node_modules/.bin/chromedriver",
        "cli_args": [
          "--verbose"
        ],
        "port": 9515
    },
    "test_settings" : {
        "default" : {
          "desiredCapabilities" : {
                "browserName" : "chrome",
                "chromeOptions": {
                  "args" : ["--no-sandbox"]
                },
                "loggingPrefs": {"driver": "INFO", "server": "OFF", "browser": "INFO"}
            }
        }
    },
    "selenium" : {
        "start_process" : true,
        "server_path" : "./bin/selenium-server-standalone-3.{VERSION}.jar",
        "log_path" : "",
        "port" : 4444,
            "cli_args" : {
              "webdriver.chrome.driver" : "./bin/chromedriver"
            }
    }
}